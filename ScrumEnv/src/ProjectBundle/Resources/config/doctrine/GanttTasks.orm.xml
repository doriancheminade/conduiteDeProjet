<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ProjectBundle\Entity\GanttTasks" table="gantt_tasks">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="text" type="string" column="text" length="255" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="startDate" type="datetime" column="start_date" nullable="false"/>
    <field name="duration" type="integer" column="duration" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="progress" type="float" column="progress" precision="10" scale="0" nullable="false"/>
    <field name="sortorder" type="integer" column="sortorder" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="parent" type="integer" column="parent" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="sprint" type="integer" column="sprint" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
  </entity>
</doctrine-mapping>
