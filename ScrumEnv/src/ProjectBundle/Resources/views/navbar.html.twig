<html>
{% block stylesheets %}
    <link href="{{ asset('css/twbs/bootstrap.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/Project/css/main.css') }}" rel="stylesheet"  type="text/css"/>
{% endblock %}
<nav class="navbar navbar-default">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('user_profil') }}">homepage</a>
        </div>
        <div>
            <ul class="nav navbar-nav">
                 {% if project is defined%}
                <li> <a> project:{{ project }} </a></li>
                <li><a href="{{ path('go_to_backlog', 
			    { 'owner': app.request.get('owner'),
			    'project': app.request.get('project')}) }}">backlog</a></li>
                <li><a href="{{ path('Sprint_creation', 
			    { 'owner': app.request.get('owner'),
			    'project': app.request.get('project')}) }}">new sprint</a></li>
                 {% endif %}

                {% if kanban_view is defined%}
                <li><a href="{{ path('go_to_Kanban', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprint': app.request.get('sprintId')}) }}">Kanban sprint</a></li>
                {% endif %}

                 {% if pertt_view is defined%}
                <li><a href="{{ path('generate_pertt', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprint': app.request.get('sprintId')}) }}">pertt sprint</a></li>
                {% endif %}	

                 {% if pre_gantt is defined%}
                <li><a href="{{ path('create_previsionelle_gantt', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprint': app.request.get('sprintId')}) }}">prev gantt</a></li>
                {% endif %}

                 {% if gantt_real is defined%}
                <li><a href="{{ path('edit_real_gantt', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprint': app.request.get('sprintId')}) }}">real gantt</a></li>
                {% endif %}

                {% if task_done is defined %}
                <li><a href="{{ path('Sprint_task_done', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprintId': app.request.get('sprintId'),
                'kanban_view' : 'ok'}) }}">tasks done</a></li>
                {% endif %}


                {% if bdc is defined %}
                <li><a href="{{ path('Bdc', 
                { 'owner': app.request.get('owner'),
                'project': app.request.get('project'),
                'sprintId': app.request.get('sprintId'),
                'kanban_view' : 'ok'}) }}">burn down chart</a></li>
                {% endif %} 	    
            </ul>
        </div>

    </div>

</nav>

</html>
