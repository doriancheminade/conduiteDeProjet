<html>
<head>
	 {% block stylesheets %}
	<link href="{{ asset('bundles/Project/css/main.css') }}" rel="stylesheet"  type="text/css"/>
	<link href="{{ asset('css/twbs/bootstrap.css') }}" rel="stylesheet" />
	{% endblock %}
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<body align="center" >
		{% block body %}
	<div id="Project">
		{{ include('ProjectBundle::navbar.html.twig') }}
		<div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        Add a task
                    </h1>
                </div>
                <div class="panel-body">
			{% if up %}
			<h1 id="TitlePage"></h1>
			{% endif %}
			{% if up==null %}
			<h1 id="TitlePage"></h1>
			{% endif %}

			{% if message %}
			<p>{{ message }}</p>
			{% endif %}
	
<form  action="" method="post" {{ form_enctype(form) }}>
	{{ form_start(form) }}
	<table align="center" id="Add_Form">
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.id) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.id) }} </td>
		</tr> 
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.description) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.description) }} </td>
		</tr> 
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.cost) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.cost) }} </td>
		</tr>
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.dependencies) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.dependencies) }} </td>
		</tr>

		<tr>
			 <td class="Add_Form_Column"> <input class="btn btn-success" type="submit" /> </td>
			 <td><a href="{{ path('Sprint_task_list', { 'owner': owner, 'project': project, 'sprintId': sprint, 'kanban_view':'salut' }) }}"class="btn btn-primary" role="button" > back to task_list   </a></td>
			
		</tr>
	</table>
   
    {{ form_end(form) }}
</form>

	
	{% endblock %}
</div>
</body>
</html>
