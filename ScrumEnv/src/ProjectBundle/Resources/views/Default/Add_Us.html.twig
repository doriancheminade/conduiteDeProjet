<html>
<head>
	<link href="{{ asset('bundles/Project/css/main.css') }}" rel="stylesheet"  type="text/css"/>
	<link href="{{ asset('css/twbs/bootstrap.css') }}" rel="stylesheet" />
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<body >
	<div id="Project">
		
		<div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        Add user story
                    </h1>
                </div>
                <div class="panel-body">
			{% if up %}
			<h1 ></h1>
			{% endif %}
			{% if up==null %}
			<h1 ></h1>
			{% endif %}

			{% if message %}
			<p>{{ message }}</p>
			{% endif %}
<form action="" method="post" {{ form_enctype(form) }}>
	{{ form_start(form) }}
	<table id="Add_Form">

		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.Id) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.Id) }} </td>
		</tr>

		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.description) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.description) }} </td>
		</tr> 
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.priority) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.priority) }} </td>
		</tr>
		<tr>
			<td class="Add_Form_Column"> {{ form_label(form.cost) }} </td>
			<td class="Add_Form_Column"> {{ form_widget(form.cost) }} </td>
		</tr>

		<tr>
			 <td class="Add_Form_Column"> <input class="btn btn-success" type="submit" /> </td>
			 <td> <a href="{{ path('go_to_backlog', 
			    { 'owner': app.request.get('owner'),
			    'project': app.request.get('project')}) }}"class="btn btn-primary" role="button">Back to backlog</a> </td>
		</tr>
	
	

			    </table>
    {{ form_end(form) }}
   
</form>
</div>
</body>
</html>
