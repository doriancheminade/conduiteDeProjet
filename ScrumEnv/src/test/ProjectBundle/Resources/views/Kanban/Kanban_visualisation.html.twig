
<html>
<head>
	<link href="{{ asset('bundles/testProject/css/main.css') }}" rel="stylesheet"  type="text/css"/>
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	<body >
	<div id="Project_Kanban">
		
			<h1 id="TitlePage">Welcome on kanban page</h1>
			<div id="Kanban">
			
			<table>
			<th class="Kanban_column_int"> ID </th>
			<th class="Kanban_column_string"> ToDo </th>
			
			{% for a in kanban_us %}

			{% if a.getAchievementTask == 'ToDo' %}
			
				<tr>
					<div>

					<td class="IntUser">{{ a.getIdTask }}</td>
					<td class="DescriptionTask">{{ a.getDescribeTask }}
				 <a class="line_option" href="{{ path('oG_Update_Achievement', { 'id': a.getIdTask }) }}"> oG </a>
				 <a class="line_option" href="{{ path('Done_Update_Achievement', { 'id': a.getIdTask }) }}"> Done </a></td>
				</div>

				</tr>
			{% endif %}
			{% endfor %}
			</table>



			<table>
			<th class="Kanban_column_int"> ID </th>
			<th class="Kanban_column_string"> onGoing </th>
			{% for a in kanban_us %}
			{% if a.getAchievementTask == 'onGoing' %}
				<tr>
					<div>

					<td class="IntUser">{{ a.getIdTask }}</td>
					<td class="DescriptionTask">{{ a.getDescribeTask }}
					<a class="line_option" href="{{ path('ToDo_Update_Achievement', { 'id': a.getIdTask }) }}"> ToDo </a>
				    <a class="line_option" href="{{ path('Done_Update_Achievement', { 'id': a.getIdTask }) }}"> Done </a></td>
					</div>
				</tr>
			{% endif %}
			{% endfor %}
			</table>


			<table>
			<th class="Kanban_column_int"> ID </th>
			<th class="Kanban_column_string"> Done </th>
			{% for a in kanban_us %}
			{% if a.getAchievementTask == 'Done' %}
				<tr>
					<div>
					<td class="IntUser">{{ a.getIdTask }}</td>
					<td class="DescriptionTask">{{ a.getDescribeTask }}
					<a class="line_option" href="{{ path('ToDo_Update_Achievement', { 'id': a.getIdTask }) }}"> ToDo </a>
				    <a class="line_option" href="{{ path('oG_Update_Achievement', { 'id': a.getIdTask }) }}"> onGoing </a></td>
					</div>
				</tr>
			{% endif %}
			{% endfor %}
			</table>

			<button type="submit" ><a href="{{ path('Welcome', { 'name': 'Guillaume' }) }}"> Back to project  </a> </button> 	
	</body>
</html>
